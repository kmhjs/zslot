#compdef zslot

function _zslot()
{
    _arguments \
        '(- *)'{-a,--add}'[add current directory to slot]: :_files' \
        '(- *)'{-u,--update}'[Update record]' \
        '(- *)'{-r,--remove}'[Remove record]' \
        '(- *)'{-s,--show}'[Show slots]' \
        '(- *)'{-h,--help}'[Show help]'
}
