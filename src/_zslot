#compdef zslot

function _zslot()
{
    _arguments \
        '(- *)'{-s,--show}'[Show slots]' \
        '(- *)'{-p,--push}'[Push current directory to slot]: :_files' \
        '(- *)'{-r,--remove}'[Remove slot with id]' \
        '(- *)'{-m,--move}'[Move to destination]' \
        '(- *)'{-i,--init}'[Initialize slots]' \
        '(- *)'{-h,--help}'[Show help]'
}
